<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
    android:id="@+id/rl_picture">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/picture"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        app:viewAspectRatio="1"
        android:contentDescription="@string/image_description"
        android:padding="@dimen/btn_radius"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:placeholderImage="@mipmap/ic_placeholder"/>

    <ImageView
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/image_padding"
        android:src="@drawable/checkbox_selector"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/picture"
        android:layout_alignEnd="@+id/picture"/>
</RelativeLayout>